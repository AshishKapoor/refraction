{
  "name": "quid-ui",
  "version": "INDEPENDENT",
  "description": "The official Quid UI project",
  "repository": "git@github.com:quid/ui-framework.git",
  "author": "Federico Zivolo <fzivolo@quid.com>",
  "license": "UNLICENSED",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "start": "styleguidist server",
    "build": "styleguidist build",
    "create-package": "builder-init $(pwd)/packages/react-package-template",
    "test": "react-app-rewired test",
    "format": "eslint \"**/*.js\" --fix && prettier \"**/*.{js,md,json}\" --write",
    "postinstall": "lerna run prepare",
    "clean": "rimraf '**/node_modules' && rimraf 'packages/*/dist'"
  },
  "lint-staged": {
    "*.{js,jsx,md,json}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "functions": 100,
        "branches": 100,
        "lines": 100
      }
    },
    "coveragePathIgnorePatterns": [
      "src",
      ".*mock\\.js$"
    ]
  },
  "dependencies": {
    "@quid/theme": "^1.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "builder-init": "^0.5.1",
    "customize-cra": "^0.2.7",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16.3": "^1.4.0",
    "enzyme-to-json": "^3.3.5",
    "eslint-plugin-flow-header": "^0.2.0",
    "flow-bin": "~0.87.0",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "jest-date-mock": "^1.0.6",
    "jest-emotion": "^10.0.2",
    "lerna": "~3.3.2",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "react": "16.3",
    "react-app-rewired": "^1.6.2",
    "react-dom": "16.3",
    "react-scripts": "^2.1.1",
    "react-styleguidist": "^8.0.6",
    "rimraf": "^2.6.2"
  },
  "resolutions": {
    "microbundle": "https://github.com/developit/microbundle.git#remove_import_pruning"
  }
}
